        ${ trigger.call("independent_publisher_entry_meta_top") }

        <div id="share-comment-button" style="display: block;">
            <button class="showDisqus">
                <i class="share-comment-icon"></i>${ "Write a Comment" | translate }
            </button>
        </div>

        {# if enabled_modules.comments and post.commentable == "open" #}
